<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_bg_color"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_margin="5dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:layout_marginTop="4dp">


                            <com.makeramen.roundedimageview.RoundedImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgaeView"
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:scaleType="fitCenter"
                                app:riv_corner_radius="1dip"
                                android:layout_marginBottom="5dp"
                                app:riv_border_width="2dip"
                                app:riv_border_color="#fff"
                                app:riv_mutate_background="true"
                                app:riv_tile_mode="repeat"
                                app:riv_oval="false" />

                        </RelativeLayout>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:fontFamily="@font/muli_bold"
                            android:singleLine="true"
                            android:maxLength="18"
                            android:text="Shushma house tax corporation"
                            android:textColor="@color/p_black"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="12dp">

                            <ImageView
                                android:id="@+id/imgFav"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:tint="@color/pink"
                                android:layout_weight="1" />





                        </LinearLayout>


                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        >

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/rating"
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:layout_marginTop="5dp"
                        android:progressTint="#f77501"
                        android:stepSize="1" />

                        <TextView
                         android:id="@+id/totlaUsers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_bold"
                            android:text="users"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/rating"
                            android:textColor="@color/grayText" />


                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_bold"
                            android:text="Grater Noida"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/muli"
                            android:text=""
                            android:textColor="@color/pink"
                            android:textSize="13sp"
                            />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/keyword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:maxLines="2"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:text="Coffie cafes, Fruti Bar,Snacks Pizza, Chines Food, Burgers"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/totlareview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="(3 Rating)"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>