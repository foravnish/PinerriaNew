<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_bg_color"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_margin="5dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/liner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:layout_gravity="center|left"
                        android:paddingLeft="0dp">



                        <TextView
                            android:id="@+id/heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="Shopping Life Style"
                            android:textColor="@color/blue" />
                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="16dp"
                            android:text="Shopping Life Style"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:drawableLeft="@drawable/loc2"
                            android:drawableTint="@color/blue"
                            android:drawablePadding="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:text="address"
                            android:textColor="@color/grayText" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:textSize="14dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:text="Salary"
                                android:textColor="@color/grayText" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:textSize="14dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:text=":"
                                android:textColor="@color/grayText" />
                            <TextView
                                android:id="@+id/salary"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:text="Bushiness"
                                android:textColor="@color/md_grey_900" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:textSize="14dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:text="Experience"
                                android:textColor="@color/grayText" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:textSize="4dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:layout_marginLeft="50dp"
                                android:text=":"
                                android:textColor="@color/grayText" />

                            <TextView
                                android:id="@+id/experience"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="12dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"
                                android:text="Bushiness"
                                android:textColor="@color/md_grey_900" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/switchJob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Display job"
                                app:switchPadding="5dp"
                                android:textColor="@color/grayText" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:textSize="14dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:text="Job Type"
                                android:textColor="@color/grayText" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:textSize="14dp"
                                android:singleLine="true"
                                android:layout_marginLeft="5dp"
                                android:gravity="left"
                                android:text=":"
                                android:textColor="@color/grayText" />
                            <TextView
                                android:id="@+id/full_part_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:textSize="12dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:text="Bushiness"
                                android:textColor="@color/md_grey_900" />

                            <TextView
                                android:id="@+id/manajeJobs"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/strock_contatct"

                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:layout_marginRight="10dp"
                                android:text="Edit Job"
                                android:textColor="#fff"
                                android:layout_marginBottom="10dp"/>

                        </LinearLayout>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/list_bg_color"></View>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            >

                            <TextView
                                android:id="@+id/jobId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:text="Experience"
                                android:textColor="@color/grayText" />


                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:singleLine="true"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:text="date"
                                android:textColor="@color/grayText" />


                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>