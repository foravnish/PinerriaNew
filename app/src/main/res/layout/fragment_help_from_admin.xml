            layout="@layout/titleheader2" />


    </LinearLayout>

    <GridView
        android:id="@+id/grigView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp">

    </GridView>
</LinearLayout>