<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/list_bg_color"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="235dp">



                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:scaleType="fitXY"
                        android:focusable="true"
                        android:adjustViewBounds="true"/>

                    <!--android:background="@drawable/stroke_img_grad"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="275dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/stroke_img_grad"
                        android:gravity="left|bottom"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/muli_bold"
                        android:text="Loading"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            >

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/rating"
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:layout_width="90dp"
                        android:layout_height="16dp"
                        android:isIndicator="true"
                        android:numStars="5"

                        android:layout_marginLeft="10dp"
                        android:progressTint="#f77501"
                        android:stepSize="0.1"
                        android:layout_marginBottom="8dp"
                        card_view:mrb_fillBackgroundStars="true"
                        card_view:mrb_progressBackgroundTint="#bbbbbb" />

                            <TextView
                                android:id="@+id/totlaUsers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="users"
                                android:textSize="12dp"

                                android:gravity="center"
                                android:layout_toRightOf="@+id/rating"
                                android:textColor="@color/white" />


                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>





            </RelativeLayout>


            <ImageView
                android:id="@+id/imgFav"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:background="@drawable/heart_back1"
                android:fontFamily="@font/muli"
                android:src="@drawable/fav2"
                android:paddingBottom="6dp"
                android:layout_marginTop="-20dp"
                android:paddingLeft="7dp"
                android:padding="10dp"
                android:paddingRight="7dp"
                android:paddingTop="9dp"
                android:tint="@color/pink"
                />



        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/orange"
                    android:drawableLeft="@drawable/profile"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/md_blue_grey_400"
                    android:fontFamily="@font/muli"
                    android:text="Ashish Kumar"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/orange"
                    android:drawableLeft="@drawable/c_location"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:drawableTint="@color/md_blue_grey_400"
                    android:paddingRight="3dp"
                    android:text="Loading Loading Loading Loading Loading Loading v Loading Loading "
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/orange"
                android:drawableLeft="@drawable/mobile_new"
                android:drawablePadding="10dp"
                android:drawableTint="@color/md_blue_grey_400"
                android:fontFamily="@font/muli"
                android:text="Loading"
                android:textColor="@color/black"
                android:textSize="15dp" />



            </RelativeLayout>
            <LinearLayout
                android:id="@+id/priceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/phone"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dddd"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/muli"
                    android:drawableTint="@color/md_blue_grey_400"
                    android:drawableLeft="@drawable/rupee"
                    android:textColor="@color/black" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/call" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_horizontal"
                        android:text="Call"
                        android:textColor="@color/md_black_1000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/chat_now" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_horizontal"
                        android:text="Chat"
                        android:textColor="@color/md_black_1000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addReview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/review_now" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_horizontal"
                        android:text="Review"
                        android:textColor="@color/md_black_1000"
                        android:textSize="12sp" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/shareDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/share_now" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_horizontal"
                        android:text="Share"
                        android:textColor="@color/md_black_1000"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>













        </LinearLayout>

        </android.support.v7.widget.CardView>





            <android.support.v7.widget.CardView
                android:id="@+id/cardGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Photo Gallery"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/p_black"/>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/textgal"
                        android:paddingHorizontal="10dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deals in"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/p_black"/>


                    <TextView
                        android:id="@+id/dealsIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dfdfd"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/md_grey_700"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>