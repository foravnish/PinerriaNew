<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="0dp"
                android:paddingBottom="10dp"
                android:background="@color/blue"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="0dp"
                    android:drawableTint="@color/blue"
                    android:layout_gravity="center"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="left"
                    android:text="@string/membershipType"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linerPrimo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/membership"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="0dp"
                        android:drawableTint="@color/blue"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="right"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/membership2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="0dp"
                        android:drawableTint="@color/blue"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:text=""
                        android:textColor="#111"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


            <com.android.volley.toolbox.NetworkImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/subCatImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dip"
                app:riv_border_width="2dip"
                android:maxHeight="200dp"
                app:riv_border_color="#fff"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                app:riv_oval="false" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/liner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:weightSum="3">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.1"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="8dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/nameBusiness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:fontFamily="@font/muli_bold"
                            android:singleLine="true"
                            android:text="Madona Beauty Salon"
                            android:textColor="@color/p_black"
                            android:textSize="20sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp">

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/rating"
                                style="@style/Widget.MaterialRatingBar.RatingBar"
                                android:layout_width="90dp"
                                android:layout_height="18dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:layout_marginTop="5dp"
                                android:progressTint="#f77501"
                                android:stepSize="1" />

                            <TextView
                                android:id="@+id/totlaUsers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli"
                                android:text="users"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/rating"
                                android:textColor="#f77501" />




                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/priceLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="Grater Noida"
                                android:textColor="#111111" />



                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli"
                                android:text=""
                                android:textColor="#777777" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp">

                                <ImageView
                                    android:id="@+id/imgFav"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:tint="@color/pink"
                                    android:layout_weight="1" />



                            </LinearLayout>


                        </RelativeLayout>


                        <TextView
                            android:id="@+id/keyword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli"
                            android:text=""
                            android:lineSpacingExtra="2dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14dp" />



                    </LinearLayout>





                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:singleLine="true"
                    android:text="Display my phone no. to buyers"
                    android:textColor="@color/star_orange"
                    android:textSize="17sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchBusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:textColor="@color/p_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/strock_btn1">


                <TextView
                    android:id="@+id/editPhoto"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/strock_lay_1"
                    android:drawableTint="@color/blue"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Manage Gallery"
                    android:textColor="#fff"

                    android:textSize="15dp"
                    android:textStyle="bold" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/strock_btn2">


                    <TextView
                        android:id="@+id/editBusiness"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/strock_lay_1"
                        android:drawableTint="@color/blue"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Manage Business"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/strock_btn3">


                    <TextView
                        android:id="@+id/msgToAdmin"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/strock_lay_1"
                        android:drawableTint="@color/blue"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Message to Admin"
                        android:textColor="#fff"

                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/strock_btn4">


                    <TextView
                        android:id="@+id/myjobs"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/strock_lay_1"
                        android:drawableTint="@color/blue"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="My Jobs "
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/strock_btn5">


                    <TextView
                        android:id="@+id/transcation"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/strock_lay_1"
                        android:drawableTint="@color/blue"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Transcations"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/strock_btn6">


                    <TextView
                        android:id="@+id/chat"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/strock_lay_1"
                        android:drawableTint="@color/blue"
                        android:fontFamily="@font/muli_semibold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Chat"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>



            </LinearLayout>











        </LinearLayout>
    </ScrollView>

</LinearLayout>