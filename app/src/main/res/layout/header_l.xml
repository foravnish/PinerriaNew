<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--android:background="@drawable/rounded_corner2"-->
    <!--android:background="@drawable/buble1"-->

    <TextView
        android:id="@+id/dateTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/strock_date"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:paddingRight="10dp"
        android:text="date"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:minWidth="120dp"
        android:layout_below="@+id/dateTab"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jg  dfhdsf sdfh "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:gravity="right"
                android:layout_marginLeft="15dp"
                android:visibility="visible"
                android:text="23-10-2018, 16:58:23"
                android:layout_marginBottom="5dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textSize="10dp"
                android:textColor="@color/white" />


        </LinearLayout>

        <ImageView
            android:layout_marginTop="-1.5dp"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:visibility="gone"
            android:layout_gravity="right"
            android:background="@drawable/corner2"
            />



    </LinearLayout>
</RelativeLayout>