<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/list_bg_color"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:focusable="true"
                        android:adjustViewBounds="true"/>


                </RelativeLayout>


                <ImageView
                    android:id="@+id/imgFav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/heart_back1"
                    android:fontFamily="@font/muli"
                    android:paddingBottom="6dp"
                    android:visibility="gone"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="9dp"
                    android:tint="@color/pink"/>

            </RelativeLayout>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/comName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:fontFamily="@font/muli_bold"
                            android:gravity="left|bottom"
                            android:text="Loading"
                            android:textColor="@color/pink"
                            android:textSize="20dp" />


                        <LinearLayout
                            android:id="@+id/linerlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/rating"
                                style="@style/Widget.MaterialRatingBar.RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:layout_marginLeft="10dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="4"
                                android:visibility="gone"
                                android:progressTint="@color/pink"
                                android:stepSize="1"
                                android:layout_marginBottom="5dp"
                                card_view:mrb_fillBackgroundStars="true"
                                card_view:mrb_progressBackgroundTint="#757575" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="18dp"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="Shopping Life Style"
                            android:textColor="@color/blue" />

                        <!--<TextView-->
                            <!--android:id="@+id/description"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:gravity="left"-->
                            <!--android:textSize="16dp"-->
                            <!--android:layout_marginLeft="14dp"-->
                            <!--android:text="Shopping Life Style"-->
                            <!--android:textColor="@color/black" />-->


                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/orange"
                            android:drawableLeft="@drawable/loc2"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/muli"
                            android:drawableTint="@color/blue"
                            android:gravity="center_vertical"
                            android:paddingRight="3dp"
                            android:text="Loading Loading Loading Loading Loading Loading v Loading Loading "
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/orange"
                        android:drawableTint="@color/blue"
                        android:drawableLeft="@drawable/callto1"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/muli"
                        android:text="Loading"
                        android:textColor="@color/black"
                        android:textSize="14dp" />











                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/liner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            android:layout_margin="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:layout_gravity="center|left"
                                android:paddingLeft="0dp">







                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.6"
                                        android:textSize="14dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:text="Salary"
                                        android:textColor="@color/grayText" />
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.1"
                                        android:textSize="14dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:text=":"
                                        android:textColor="@color/grayText" />
                                    <TextView
                                        android:id="@+id/salary"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textSize="14dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:text="Bushiness"
                                        android:textColor="@color/md_grey_900" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="7dp"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.6"
                                        android:textSize="14dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:text="Experience"
                                        android:textColor="@color/grayText" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.1"
                                        android:textSize="14dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:text=":"
                                        android:textColor="@color/grayText" />
                                    <TextView
                                        android:id="@+id/experience"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textSize="12dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:text="Bushiness"
                                        android:textColor="@color/md_grey_900" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.6"
                                        android:textSize="14dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:text="Job Type"
                                        android:textColor="@color/grayText" />
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.1"
                                        android:textSize="14dp"
                                        android:singleLine="true"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="left"
                                        android:text=":"
                                        android:textColor="@color/grayText" />
                                    <TextView
                                        android:id="@+id/full_part_time"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".7"
                                        android:textSize="12dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:text="Bushiness"
                                        android:textColor="@color/md_grey_900" />

                                    <TextView
                                        android:id="@+id/contactUs"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/strock_contatct"

                                        android:visibility="invisible"
                                        android:layout_weight="0.6"
                                        android:gravity="center"
                                        android:layout_marginRight="10dp"
                                        android:text="Contact Us"
                                        android:textColor="#fff"
                                        />

                                </LinearLayout>



                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1.5dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/list_bg_color"></View>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    >

                                    <TextView
                                        android:id="@+id/jobId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14dp"
                                        android:singleLine="true"
                                        android:textStyle="bold"
                                        android:gravity="left"
                                        android:text="Experience"
                                        android:textColor="@color/grayText" />


                                    <TextView
                                        android:id="@+id/date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:singleLine="true"
                                        android:gravity="left"
                                        android:textStyle="bold"
                                        android:layout_marginRight="10dp"
                                        android:layout_alignParentRight="true"
                                        android:text="date"
                                        android:textColor="@color/grayText" />


                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>







                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/call"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/strock_btn_green"
                            android:fontFamily="@font/muli_bold"
                            android:text="Call Now"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/chat_now"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/strock_btn_green"
                            android:fontFamily="@font/muli_bold"
                            android:text="Chat Now"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:textSize="16dp" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/shareDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/strock_btn_green"
                        android:fontFamily="@font/muli_bold"
                        android:text="Share Job"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16dp" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:text="Description"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:text="Shopping Life Style"
                        android:textColor="@color/black" />

                </LinearLayout>



            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>