<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle1</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarColoredBackArrow">
        <item name="android:textColorSecondary">@color/pink</item>
    </style>

    <style name="DrawerArrowStyle1" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/pink</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray5</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/gray5</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="NavigationDrawerStyle">

        <item name="android:textSize">15sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">35dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">35dp</item><!-- item size in menu-->
        <item name="android:fontFamily">@font/muli_semibold</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/green2</item>
    </style>
</resources>
